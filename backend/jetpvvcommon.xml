  <version>3.1.0</version>
  <description>Common functions of Joomla Empresa TPVV for VirtueMart v.3.1.0</description>
  <files folder="frontend">
    <filename>index.html</filename>
  </files>
  <!-- Installation script -->
  <scriptfile>script.jetpvvcommon.php</scriptfile>
  <install>
    <sql>
      <file driver="mysql" charset="utf8">instalar/instalar.mysql.sql</file>
    </sql>
  </install>
  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">instalar/desinstalar.mysql.sql</file>
    </sql>
  </uninstall>
  <administration>
    <menu img="components/com_jetpvvcommon/assets/images/com_jetpvvcommon-16.png">JETPVVcommon</menu>
    <files folder="backend">
      <filename>jetpvvcommon.php</filename>
      <filename>version.php</filename>
      <filename>index.html</filename>
      <folder>assets</folder>
      <folder>instalar</folder>
      <folder>helpers</folder>
    </files>
  <languages folder="language/backend">
    <language tag="en-GB">en-GB/en-GB.com_jetpvvcommon.ini</language>
    <language tag="en-GB">en-GB/en-GB.com_jetpvvcommon.sys.ini</language>
    <language tag="gl-ES">gl-ES/gl-ES.com_jetpvvcommon.ini</language>
    <language tag="gl-ES">gl-ES/gl-ES.com_jetpvvcommon.sys.ini</language>
    <language tag="ca-ES">ca-ES/ca-ES.com_jetpvvcommon.ini</language>
    <language tag="ca-ES">ca-ES/ca-ES.com_jetpvvcommon.sys.ini</language>
    <language tag="es-ES">es-ES/es-ES.com_jetpvvcommon.ini</language>
    <language tag="es-ES">es-ES/es-ES.com_jetpvvcommon.sys.ini</language>
  </languages>
  </administration>
</extension>
